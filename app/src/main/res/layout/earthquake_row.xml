<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/quakeMagnitude"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        tools:text="6.9"/>

    <LinearLayout
        android:id="@+id/quakeLocation"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/locationOffset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Shahdol"/>

        <TextView
            android:id="@+id/primaryLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Burhar Chowk"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quakeMoment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quakeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Dec 20, 2020"/>

        <TextView
            android:id="@+id/quakeTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="12:00:00"/>

    </LinearLayout>

</LinearLayout>